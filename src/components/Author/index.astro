---
import Ja from "./Ja.astro";
import En from "./En.astro";
import type { Lang } from "@components/types";

export interface Author {
  affiliation: string;
  name?: string;
}

interface Props {
  lang: Lang;
  author: Author;
}

const { lang, author } = Astro.props;
---

{
  {
    ja: <Ja author={author} />,
    en: <En author={author} />,
  }[lang]
}
