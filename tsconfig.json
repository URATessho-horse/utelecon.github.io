{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "mdx": {
    "plugins": [
      "remark-gfm",
      "./src/lib/BlockIALPlugin.js",
      "./src/lib/SimpleAttentionPlugin.js"
    ]
  }
}
